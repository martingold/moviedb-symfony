{% extends 'base.html.twig' %}

{% block title %}Přehled nejlepších filmů{% endblock %}

{% block body %}
    <h1 class="text-2xl mt-4 font-semibold">Nejlepší filmy</h1>
    <div class="bg-white mt-4 border rounded bg-white">
        {% for movie in movies %}
            <div class="{{ cycle(['bg-gray-100', ''], loop.index0) }} p-2 flex">
                <a class="text-red-500 hover:text-red-600 flex-grow" href="{{ path('movie_detail', {slug: movie.slug}) }}">
                    {{ movie.title }}
                </a>
                <span>
                    {{ movie.overallRating|number_format(1, ',') }}%
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}
